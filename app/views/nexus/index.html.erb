<div class="container">
    <div class= 'editor-form' style="display: none">
        <%= form_for :block, :url => "/body_upload" do |f| %>
            <%= f.kindeditor :body, :simple_mode => true %>
            <%= f.text_field :coorX, :class => 'invisible cx' %>
            <%= f.text_field :coorY, :class => 'invisible cy' %>
            <%= f.submit :value=> "submit", :class => "btn" %>
        <% end %>
    </div>

    <div class="block-container">

      <div class='up-nav'></div>
      <div class='right-nav'></div>
      <div class='down-nav'></div>
      <div class='left-nav'></div>
    </div>
</div>


<!--template element and invisible form-->
<div class='ghost-form' style='display: none'>
  <div class='id-input'>
    <input id="block_id" name="block[id]" type="text">
  </div>
</div>

<div class='templates' style='display: none'>
  <!--block template-->
  <div class="block" coor-x="" coor-y="" status="blank"></div>
</div>